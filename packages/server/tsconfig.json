{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop":true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "outDir": "dist"
    // "baseUrl": ".",
    // "paths": {
    //   "common/*": ["node_modules/common/dist/*"]
    // }
  },
  "include": [
    "src/**/*.ts",
    // "../common/**/*.ts"
  ],
  "exclude": [
    "../../node_modules",
    "**/*.spec.ts"
  ]
}
