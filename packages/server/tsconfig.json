{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop":true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../../node_modules",
    "**/*.spec.ts"
  ]
}
